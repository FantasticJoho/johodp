{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "dotnet",
			"task": "build",
			"group": "build",
			"problemMatcher": [
				"$msCompile"
			],
			"label": "dotnet: build"
		},
		{
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/src/Johodp.Api/Johodp.Api.csproj",
				"--launch-profile",
				"https"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"label": "dotnet: run (HTTPS)",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"${workspaceFolder}/src/Johodp.Api/Johodp.Api.csproj",
				"--launch-profile",
				"http"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"label": "dotnet: run (HTTP)",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"type": "dotnet",
			"task": "watch",
			"problemMatcher": [
				"$msCompile"
			],
			"label": "dotnet: watch",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/src/Johodp.Api"
			}
		},
		{
			"type": "dotnet",
			"task": "clean",
			"problemMatcher": [],
			"label": "dotnet: clean"
		}
	]
}