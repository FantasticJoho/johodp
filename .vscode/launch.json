    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Johodp API (HTTPS)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/src/Johodp.Api/bin/Debug/net8.0/Johodp.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Johodp.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/Johodp.Api/Views"
            }
        },
        {
            "name": "Run Johodp API (HTTP)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/src/Johodp.Api/bin/Debug/net8.0/Johodp.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Johodp.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (http?://\\S+)",
                "uriFormat": "%s"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/Johodp.Api/Views"
            }
        }
    ]
}