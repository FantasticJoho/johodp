{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information",
      "System": "Error",
      "Johodp": "Information"
    }
  },
  "IdentityServer": {
    "SigningKeyPath": "/app/keys/signing-key.pfx",
    "SigningKeyPassword": "REPLACE_WITH_SECRET_FROM_KEYVAULT_OR_ENV",
    "Events": {
      "RaiseSuccessEvents": false,
      "RaiseFailureEvents": true,
      "RaiseInformationEvents": false,
      "RaiseErrorErrors": true,
      "LogTokenIssuance": "All"
    }
  },
  "RepositoryCache": {
    "Enabled": true,
    "DurationHours": 24,
    "Comment": "Production: Cache enabled with 24h duration for stable data (Tenant/Client). Set to false only for troubleshooting."
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=prod-db;Port=5432;Database=johodp;Username=johodp_user;Password=REPLACE_WITH_SECRET"
  }
}
