{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Johodp.Infrastructure.IdentityServer.IdentityServerEventSink": "Debug"
    }
  },
  "IdentityServer": {
    "Comment": "Development environment detected by IWebHostEnvironment.IsDevelopment() - uses AddDeveloperSigningCredential() automatically",
    "Events": {
      "RaiseSuccessEvents": true,
      "RaiseFailureEvents": true,
      "RaiseInformationEvents": true,
      "RaiseErrorEvents": true,
      "LogTokenIssuance": "All"
    }
  }
}
